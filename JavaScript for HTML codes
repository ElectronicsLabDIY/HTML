<script type ="text/javascript"> 
	function addParagraphText() 
	 
	{
		document.getElementById("olala").innerHTML = "Congratulations! your button is working";
	}


</script>
</head>

<body> 
<button onclick="addParagraphText();"> press here </button>
<h1 id="olala"> </h1>
</body>


</html>

